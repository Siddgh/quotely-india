<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_widget_layout_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:shadowColor="@color/colorBlackTransparency90"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Life men jitna bhi try karo kuch na kuch toh chhootega hi, toh jaha hai wahi ka maza lete hai na"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_widget_layout_movie"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@string/content_description_icon"
            android:src="@drawable/ic_movie" />

        <TextView
            android:id="@+id/tv_widget_layout_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/arial"
            android:shadowColor="@color/colorBlackTransparency90"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="YEH JAWAANI HAI DEEWANI"
            android:textColor="@color/colorText"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>